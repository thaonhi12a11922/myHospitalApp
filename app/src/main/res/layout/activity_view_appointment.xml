<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAppointment">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="467dp"
        android:layout_height="669dp"
        android:layout_marginBottom="332dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hcms_23_24____lcm_december___lc_update__1__removebg_preview"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="500dp"
        android:layout_height="750dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/thit_k_cha_c__t_n"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-45dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/arima_madurai_extrabold"
        android:text="Today's Schedule"
        android:textColor="#55C2C3"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="40dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="#2F47B9BA"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#00D0B7B7"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="65dp"
                    app:srcCompat="@drawable/calendar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:layout_marginRight="40dp"
                        android:fontFamily="@font/averia_sans_libre_bold"
                        android:gravity="center"
                        android:text="Pham Anh Chi"
                        android:textColor="#000"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="82dp"
                        android:fontFamily="@font/averia_sans_libre"
                        android:gravity="center"
                        android:text="Allergics"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="22dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/averia_sans_libre"
                        android:gravity="center"
                        android:text="Mon 8:00"
                        android:textColor="#000"
                        android:textSize="17dp"
                        android:textStyle="normal" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="40dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="#2F47B9BA"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#00D0B7B7"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="65dp"
                    app:srcCompat="@drawable/calendar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/averia_sans_libre_bold"
                        android:gravity="center"
                        android:text="Nguyen Duc Manh"
                        android:textColor="#000"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:fontFamily="@font/averia_sans_libre"
                        android:gravity="center"
                        android:text="Seasonal Flu"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="22dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/averia_sans_libre"
                        android:gravity="center"
                        android:text="Mon 9:00"
                        android:textColor="#000"
                        android:textSize="17dp"
                        android:textStyle="normal" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>